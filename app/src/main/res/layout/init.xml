<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:columnCount="2"
        android:orientation="horizontal">
    </GridLayout>


    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f16b0c"
        android:orientation="vertical">

    </LinearLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        fab:menu_icon="@drawable/ic_arrow_upward_white_24dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabSyncTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            fab:fab_label="Sync Task"
            android:src="@drawable/ic_sync_white_24dp" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            fab:fab_label="Add Task"
            android:src="@drawable/ic_add_white_24dp" />

    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>
